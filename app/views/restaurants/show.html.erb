<div class="container">
<h1> <span> <%= @restaurant.name  %></span></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<br>

<h3><span class="badge badge-secondary">Review for <%= @restaurant.name %></span></h3>
<p><% @restaurant.reviews.each do |review| %></p>
<p>Rating: <%= review.rating %></p>
<p><%= review.content %></p>
<% end %>

<p><%= link_to "Edit this restaurant", edit_restaurant_path,  class: "btn btn-primary" %></p>
<p><%= link_to "Create a review for this restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>
<p><%= link_to "Back to List", restaurants_path, class: "btn btn-primary" %></p>
</div>

